# =============================================================================

# Funci贸n para mostrar ayuda
show_help() {
    echo " mateos-menu"
    echo ""
    echo "Uso: mateos-menu [argumentos]"
    echo ""
    echo "Descripci贸n: [DESCRIPCIN DEL COMANDO]"
    echo ""
    echo "Comandos:"
    echo "  [comando1]    - [descripci贸n del comando1]"
    echo "  [comando2]    - [descripci贸n del comando2]"
