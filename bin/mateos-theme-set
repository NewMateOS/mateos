#!/bin/bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: mateos-theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/mateos/themes/"
CURRENT_THEME_DIR="$HOME/.config/mateos/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
mateos-theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  mateos-restart-waybar
fi
mateos-restart-swayosd
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode, cursor themes
mateos-theme-set-terminal
mateos-theme-set-gnome
mateos-theme-set-browser
mateos-theme-set-vscode
mateos-theme-set-cursor
mateos-theme-set-obsidian

# Call hook on theme set
mateos-hook theme-set "$THEME_NAME"

