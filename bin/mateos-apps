#!/bin/bash

# MateOS Applications Management System
# Sistema de gestiÃ³n de aplicaciones de MateOS

MATEOS_PATH="${MATEOS_PATH:-$HOME/.local/share/mateOS}"
APPS_CONFIG="$HOME/.config/mateOS/apps.conf"
APPS_LOG="$HOME/.local/state/mateOS/logs/apps.log"

# Crear directorios necesarios
mkdir -p "$(dirname "$APPS_CONFIG")" "$(dirname "$APPS_LOG")"

# FunciÃ³n para logging de aplicaciones
app_log() {
    local message="$1"
    local timestamp=$(date '+%Y-%m-%d %H:%M:%S')
    echo "[$timestamp] $message" >> "$APPS_LOG"
}

# FunciÃ³n para detectar aplicaciones faltantes
detect_missing_apps() {
    local category="${1:-all}"
    
    echo "ğŸ” Detectando aplicaciones faltantes..."
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    local missing_apps=()
    
    # Aplicaciones esenciales
    local essential_apps=(
        "hyprland"
        "waybar"
        "kitty"
        "gum"
        "jq"
        "uwsm-app"
    )
    
    # Aplicaciones recomendadas
    local recommended_apps=(
        "btop"
        "fastfetch"
        "starship"
        "swayosd"
        "walker"
        "hypridle"
        "hyprlock"
        "hyprsunset"
        "mako"
        "blueberry"
        "nautilus"
        "chromium"
        "firefox"
        "nvim"
        "git"
        "docker"
        "docker-compose"
        "tailscale"
        "steam"
        "discord"
        "spotify"
        "obsidian"
        "1password"
        "signal-desktop"
    )
    
    # Aplicaciones de desarrollo
    local dev_apps=(
        "base-devel"
        "nodejs"
        "npm"
        "python"
        "python-pip"
        "rust"
        "go"
        "jdk-openjdk"
        "maven"
        "gradle"
        "vscode"
        "intellij-idea-community-edition"
    )
    
    # Aplicaciones de gaming
    local gaming_apps=(
        "steam"
        "discord"
        "lutris"
        "wine"
        "winetricks"
        "proton-ge-custom"
        "gamemode"
        "mangohud"
        "vulkan-radeon"
        "vulkan-intel"
        "nvidia"
        "nvidia-utils"
        "nvidia-settings"
    )
    
    case "$category" in
        "essential")
            check_apps "${essential_apps[@]}"
            ;;
        "recommended")
            check_apps "${recommended_apps[@]}"
            ;;
        "development"|"dev")
            check_apps "${dev_apps[@]}"
            ;;
        "gaming"|"games")
            check_apps "${gaming_apps[@]}"
            ;;
        "all"|*)
            check_apps "${essential_apps[@]}" "${recommended_apps[@]}"
            ;;
    esac
}

# FunciÃ³n para verificar aplicaciones
check_apps() {
    local apps=("$@")
    local missing_count=0
    
    for app in "${apps[@]}"; do
        if ! command -v "$app" &>/dev/null && ! pacman -Q "$app" &>/dev/null; then
            echo "âŒ $app (faltante)"
            ((missing_count++))
        else
            echo "âœ… $app"
        fi
    done
    
    echo ""
    echo "ğŸ“Š Total de aplicaciones faltantes: $missing_count"
    
    if [ $missing_count -gt 0 ]; then
        echo "ğŸ’¡ Ejecuta: mateos-apps install-missing $category"
    fi
}

# FunciÃ³n para instalar aplicaciones faltantes
install_missing_apps() {
    local category="${1:-all}"
    local auto_confirm="${2:-false}"
    
    echo "ğŸ“¦ Instalando aplicaciones faltantes..."
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    local apps_to_install=()
    
    # Detectar aplicaciones faltantes
    case "$category" in
        "essential")
            apps_to_install=($(detect_missing_apps "essential" | grep "âŒ" | cut -d' ' -f2))
            ;;
        "recommended")
            apps_to_install=($(detect_missing_apps "recommended" | grep "âŒ" | cut -d' ' -f2))
            ;;
        "development"|"dev")
            apps_to_install=($(detect_missing_apps "development" | grep "âŒ" | cut -d' ' -f2))
            ;;
        "gaming"|"games")
            apps_to_install=($(detect_missing_apps "gaming" | grep "âŒ" | cut -d' ' -f2))
            ;;
        "all"|*)
            apps_to_install=($(detect_missing_apps "all" | grep "âŒ" | cut -d' ' -f2))
            ;;
    esac
    
    if [ ${#apps_to_install[@]} -eq 0 ]; then
        echo "âœ… No hay aplicaciones faltantes"
        return 0
    fi
    
    echo "Aplicaciones a instalar: ${apps_to_install[*]}"
    echo ""
    
    if [ "$auto_confirm" != "true" ]; then
        read -p "Â¿Continuar con la instalaciÃ³n? (y/N): " confirm
        if [ "$confirm" != "y" ] && [ "$confirm" != "Y" ]; then
            echo "âŒ InstalaciÃ³n cancelada"
            return 1
        fi
    fi
    
    # Instalar aplicaciones
    local installed=0
    local failed=0
    
    for app in "${apps_to_install[@]}"; do
        echo "ğŸ“¦ Instalando $app..."
        
        if yay -S --noconfirm "$app" &>/dev/null; then
            echo "âœ… $app instalado"
            ((installed++))
            app_log "App installed: $app"
        else
            echo "âŒ Error instalando $app"
            ((failed++))
            app_log "App installation failed: $app"
        fi
    done
    
    echo ""
    echo "ğŸ“Š Resumen de instalaciÃ³n:"
    echo "  âœ… Instalados: $installed"
    if [ $failed -gt 0 ]; then
        echo "  âŒ Fallidos: $failed"
    fi
}

# FunciÃ³n para listar aplicaciones instaladas
list_installed_apps() {
    local category="${1:-all}"
    
    echo "ğŸ“‹ Aplicaciones instaladas:"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    case "$category" in
        "essential")
            list_category_apps "essential"
            ;;
        "recommended")
            list_category_apps "recommended"
            ;;
        "development"|"dev")
            list_category_apps "development"
            ;;
        "gaming"|"games")
            list_category_apps "gaming"
            ;;
        "all"|*)
            list_category_apps "essential"
            echo ""
            list_category_apps "recommended"
            ;;
    esac
}

# FunciÃ³n para listar aplicaciones por categorÃ­a
list_category_apps() {
    local category="$1"
    
    case "$category" in
        "essential")
            echo "ğŸ”§ Aplicaciones esenciales:"
            check_apps "hyprland" "waybar" "kitty" "gum" "jq" "uwsm-app"
            ;;
        "recommended")
            echo "â­ Aplicaciones recomendadas:"
            check_apps "btop" "fastfetch" "starship" "swayosd" "walker" "hypridle" "hyprlock" "hyprsunset" "mako" "blueberry" "nautilus" "chromium" "firefox" "nvim" "git" "docker" "docker-compose" "tailscale" "steam" "discord" "spotify" "obsidian" "1password" "signal-desktop"
            ;;
        "development")
            echo "ğŸ’» Aplicaciones de desarrollo:"
            check_apps "base-devel" "nodejs" "npm" "python" "python-pip" "rust" "go" "jdk-openjdk" "maven" "gradle" "vscode" "intellij-idea-community-edition"
            ;;
        "gaming")
            echo "ğŸ® Aplicaciones de gaming:"
            check_apps "steam" "discord" "lutris" "wine" "winetricks" "proton-ge-custom" "gamemode" "mangohud" "vulkan-radeon" "vulkan-intel" "nvidia" "nvidia-utils" "nvidia-settings"
            ;;
    esac
}

# FunciÃ³n para configurar aplicaciones
configure_apps() {
    local app_name="$1"
    local config_type="$2"
    
    if [ -z "$app_name" ]; then
        echo "âŒ Error: Debes especificar un nombre de aplicaciÃ³n"
        return 1
    fi
    
    if [ -z "$config_type" ]; then
        config_type="default"
    fi
    
    echo "ğŸ”§ Configurando aplicaciÃ³n: $app_name"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    case "$app_name" in
        "hyprland")
            configure_hyprland "$config_type"
            ;;
        "waybar")
            configure_waybar "$config_type"
            ;;
        "kitty")
            configure_kitty "$config_type"
            ;;
        "chromium")
            configure_chromium "$config_type"
            ;;
        "docker")
            configure_docker "$config_type"
            ;;
        "steam")
            configure_steam "$config_type"
            ;;
        *)
            echo "âŒ Error: AplicaciÃ³n no soportada: $app_name"
            echo "Aplicaciones soportadas: hyprland, waybar, kitty, chromium, docker, steam"
            return 1
            ;;
    esac
}

# FunciÃ³n para configurar Hyprland
configure_hyprland() {
    local config_type="$1"
    
    echo "ğŸ”§ Configurando Hyprland..."
    
    case "$config_type" in
        "default")
            echo "âœ… ConfiguraciÃ³n por defecto aplicada"
            ;;
        "gaming")
            echo "ğŸ® ConfiguraciÃ³n de gaming aplicada"
            ;;
        "development")
            echo "ğŸ’» ConfiguraciÃ³n de desarrollo aplicada"
            ;;
        *)
            echo "âŒ Error: Tipo de configuraciÃ³n no soportado: $config_type"
            return 1
            ;;
    esac
    
    app_log "Hyprland configured: $config_type"
}

