# FunciÃ³n para mostrar estadÃ­sticas
show_stats() {
    echo "ğŸ“Š EstadÃ­sticas de aplicaciones:"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    
    # Contar aplicaciones instaladas
    local essential_count=$(detect_missing_apps "essential" | grep -c "âœ…")
    local recommended_count=$(detect_missing_apps "recommended" | grep -c "âœ…")
    local dev_count=$(detect_missing_apps "development" | grep -c "âœ…")
    local gaming_count=$(detect_missing_apps "gaming" | grep -c "âœ…")
    
    echo "ğŸ”§ Aplicaciones esenciales: $essential_count/6"
    echo "â­ Aplicaciones recomendadas: $recommended_count/15"
    echo "ğŸ’» Aplicaciones de desarrollo: $dev_count/12"
    echo "ğŸ® Aplicaciones de gaming: $gaming_count/13"
    
    # Calcular porcentaje de completitud
    local total_essential=6
    local total_recommended=15
    local total_dev=12
    local total_gaming=13
    
    local essential_percent=$((essential_count * 100 / total_essential))
    local recommended_percent=$((recommended_count * 100 / total_recommended))
    local dev_percent=$((dev_count * 100 / total_dev))
    local gaming_percent=$((gaming_count * 100 / total_gaming))
    
    echo ""
    echo "ğŸ“ˆ Porcentaje de completitud:"
    echo "  ğŸ”§ Esenciales: $essential_percent%"
    echo "  â­ Recomendadas: $recommended_percent%"
    echo "  ğŸ’» Desarrollo: $dev_percent%"
    echo "  ğŸ® Gaming: $gaming_percent%"
}

# FunciÃ³n principal
case "$1" in
    "detect")
        detect_missing_apps "$2"
        ;;
    "install-missing")
        install_missing_apps "$2" "$3"
        ;;
    "list")
        list_installed_apps "$2"
        ;;
    "configure")
        configure_apps "$2" "$3"
        ;;
    "stats")
        show_stats
        ;;
    *)
        echo "ğŸ“± MateOS Applications Management System"
        echo ""
        echo "Uso: mateos-apps <comando> [argumentos]"
        echo ""
        echo "Comandos:"
        echo "  detect [categorÃ­a]               - Detectar aplicaciones faltantes"
        echo "  install-missing [categorÃ­a] [auto] - Instalar aplicaciones faltantes"
        echo "  list [categorÃ­a]                 - Listar aplicaciones instaladas"
        echo "  configure <app> [tipo]           - Configurar aplicaciÃ³n"
        echo "  stats                            - Mostrar estadÃ­sticas"
        echo ""
        echo "CategorÃ­as disponibles: essential, recommended, development, gaming, all"
        echo "Aplicaciones soportadas: hyprland, waybar, kitty, chromium, docker, steam"
        echo ""
        echo "Ejemplos:"
        echo "  mateos-apps detect essential"
        echo "  mateos-apps install-missing recommended"
        echo "  mateos-apps configure hyprland gaming"
        echo "  mateos-apps stats"
        ;;
esac
