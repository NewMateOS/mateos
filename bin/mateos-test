#!/bin/bash

# MateOS Testing System
# Sistema de testing para scripts de MateOS

MATEOS_PATH="${MATEOS_PATH:-$HOME/.local/share/mateOS}"
TEST_DIR="$HOME/.config/mateOS/tests"
TEST_RESULTS="$HOME/.local/state/mateOS/test-results.log"
TEST_CONFIG="$HOME/.config/mateOS/test.conf"

# Crear directorios necesarios
mkdir -p "$TEST_DIR" "$(dirname "$TEST_RESULTS")" "$(dirname "$TEST_CONFIG")"

# Colores para output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Funci√≥n para imprimir mensajes con color
print_status() {
    local color="$1"
    local message="$2"
    echo -e "${color}${message}${NC}"
}

# Funci√≥n para logging de tests
log_test() {
    local test_name="$1"
    local result="$2"
    local message="$3"
    local timestamp=$(date '+%Y-%m-%d %H:%M:%S')
    
    echo "[$timestamp] $test_name:$result:$message" >> "$TEST_RESULTS"
}

# Funci√≥n para ejecutar test individual
run_test() {
    local test_file="$1"
    local verbose="${2:-false}"
    
    if [ ! -f "$test_file" ]; then
        print_status "$RED" "‚ùå Test no encontrado: $test_file"
        return 1
    fi
    
    local test_name=$(basename "$test_file" .test)
    
    if [ "$verbose" = "true" ]; then
        print_status "$BLUE" "üß™ Ejecutando test: $test_name"
    fi
    
    # Ejecutar test
    local start_time=$(date +%s)
    local test_result=0
    
    if bash "$test_file" 2>&1; then
        test_result=0
    else
        test_result=1
    fi
    
    local end_time=$(date +%s)
    local duration=$((end_time - start_time))
    
    # Log del resultado
    if [ $test_result -eq 0 ]; then
        print_status "$GREEN" "‚úÖ $test_name (${duration}s)"
        log_test "$test_name" "PASS" "Test passed in ${duration}s"
    else
        print_status "$RED" "‚ùå $test_name (${duration}s)"
        log_test "$test_name" "FAIL" "Test failed in ${duration}s"
    fi
    
    return $test_result
}

# Funci√≥n para ejecutar todos los tests
run_all_tests() {
    local test_suite="${1:-all}"
    local verbose="${2:-false}"
    
    print_status "$BLUE" "üß™ Ejecutando suite de tests: $test_suite"
    echo ""
    
    local total_tests=0
    local passed_tests=0
    local failed_tests=0
    
    # Limpiar resultados anteriores
    > "$TEST_RESULTS"
    
    # Buscar archivos de test
    local test_files=()
    
    case "$test_suite" in
        "all")
            test_files=($(find "$TEST_DIR" -name "*.test" 2>/dev/null))
            ;;
        "unit")
            test_files=($(find "$TEST_DIR" -name "*unit*.test" 2>/dev/null))
            ;;
        "integration")
            test_files=($(find "$TEST_DIR" -name "*integration*.test" 2>/dev/null))
            ;;
        "config")
            test_files=($(find "$TEST_DIR" -name "*config*.test" 2>/dev/null))
            ;;
        *)
            test_files=($(find "$TEST_DIR" -name "*${test_suite}*.test" 2>/dev/null))
            ;;
    esac
    
    if [ ${#test_files[@]} -eq 0 ]; then
        print_status "$YELLOW" "‚ö†Ô∏è  No se encontraron tests para la suite: $test_suite"
        return 1
    fi
    
    # Ejecutar cada test
    for test_file in "${test_files[@]}"; do
        ((total_tests++))
        
        if run_test "$test_file" "$verbose"; then
            ((passed_tests++))
        else
            ((failed_tests++))
        fi
    done
    
    # Resumen
    echo ""
    print_status "$BLUE" "üìä Resumen de tests:"
    print_status "$GREEN" "  ‚úÖ Pasados: $passed_tests"
    if [ $failed_tests -gt 0 ]; then
        print_status "$RED" "  ‚ùå Fallidos: $failed_tests"
    fi
    print_status "$BLUE" "  üìã Total: $total_tests"
    
    # Log del resumen
    log_test "SUITE_SUMMARY" "COMPLETE" "Total:$total_tests,Passed:$passed_tests,Failed:$failed_tests"
    
    return $failed_tests
}

# Funci√≥n para crear test template
create_test_template() {
    local test_name="$1"
    local test_type="${2:-unit}"
    
    if [ -z "$test_name" ]; then
        echo "‚ùå Error: Debes especificar un nombre para el test"
        return 1
    fi
    
    local test_file="$TEST_DIR/${test_name}.test"
    
    if [ -f "$test_file" ]; then
        echo "‚ùå Error: El test '$test_name' ya existe"
        return 1
    fi
    
    # Crear template seg√∫n el tipo
    case "$test_type" in
        "unit")
            cat > "$test_file" << EOF
#!/bin/bash

# Test Unitario: $test_name
# Tipo: $test_type
# Creado: $(date)

# Configuraci√≥n del test
TEST_NAME="$test_name"
TEST_TYPE="$test_type"

# Funci√≥n de setup
setup() {
    echo "Setting up test: \$TEST_NAME"
    # Configuraci√≥n inicial del test
}

# Funci√≥n de teardown
teardown() {
    echo "Tearing down test: \$TEST_NAME"
    # Limpieza despu√©s del test
}

# Funci√≥n principal del test
test_main() {
    echo "Running test: \$TEST_NAME"
    
    # Ejemplo de test
    if [ 1 -eq 1 ]; then
        echo "‚úÖ Test passed"
        return 0
    else
        echo "‚ùå Test failed"
        return 1
    fi
}

# Ejecutar test
setup
test_main
result=\$?
teardown
exit \$result
EOF
            ;;
        "integration")
            cat > "$test_file" << EOF
#!/bin/bash

# Test de Integraci√≥n: $test_name
# Tipo: $test_type
# Creado: $(date)

# Configuraci√≥n del test
TEST_NAME="$test_name"
TEST_TYPE="$test_type"

# Funci√≥n de setup
setup() {
    echo "Setting up integration test: \$TEST_NAME"
    # Configuraci√≥n inicial del test de integraci√≥n
}

# Funci√≥n de teardown
teardown() {
    echo "Tearing down integration test: \$TEST_NAME"
    # Limpieza despu√©s del test
}

# Funci√≥n principal del test
test_main() {
    echo "Running integration test: \$TEST_NAME"
    
    # Ejemplo de test de integraci√≥n
    if command -v mateos-config &>/dev/null; then
        echo "‚úÖ MateOS config available"
        return 0
    else
        echo "‚ùå MateOS config not available"
        return 1
    fi
}

# Ejecutar test
setup
test_main
result=\$?
teardown
exit \$result
EOF
            ;;
        "config")
            cat > "$test_file" << EOF
#!/bin/bash

# Test de Configuraci√≥n: $test_name
# Tipo: $test_type
# Creado: $(date)

# Configuraci√≥n del test
TEST_NAME="$test_name"
TEST_TYPE="$test_type"

# Funci√≥n de setup
setup() {
    echo "Setting up config test: \$TEST_NAME"
    # Configuraci√≥n inicial del test de configuraci√≥n
}

# Funci√≥n de teardown
teardown() {
    echo "Tearing down config test: \$TEST_NAME"
    # Limpieza despu√©s del test
}

# Funci√≥n principal del test
test_main() {
    echo "Running config test: \$TEST_NAME"
    
    # Ejemplo de test de configuraci√≥n
    if [ -f "$MATEOS_PATH/config/mateos.conf" ]; then
        echo "‚úÖ Configuration file exists"
        return 0
    else
        echo "‚ùå Configuration file missing"
        return 1
    fi
}

# Ejecutar test
setup
test_main
result=\$?
teardown
exit \$result
EOF
            ;;
    esac
    
    chmod +x "$test_file"
    
    print_status "$GREEN" "‚úÖ Test template creado: $test_name"
    print_status "$BLUE" "üìÅ Ubicaci√≥n: $test_file"
    print_status "$YELLOW" "üí° Edita el archivo para personalizar el test"
}

# Funci√≥n para mostrar resultados
show_results() {
    local lines="${1:-50}"
    local test_name="${2:-*}"
    
    echo "üìã Resultados de tests (√∫ltimas $lines l√≠neas):"
    echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
    
    if [ -f "$TEST_RESULTS" ]; then
        if [ "$test_name" = "*" ]; then
            tail -n "$lines" "$TEST_RESULTS"
        else
            grep "$test_name" "$TEST_RESULTS" | tail -n "$lines"
        fi
    else
        echo "No hay resultados de tests"
    fi
}

# Funci√≥n para generar reporte
generate_report() {
    local output_file="${1:-$TEST_DIR/test-report-$(date +%Y%m%d-%H%M%S).txt}"
    
    echo "üìã Generando reporte de tests..."
    echo ""
    
    {
        echo "MateOS Test Report"
        echo "================="
        echo "Generated: $(date)"
        echo "System: $(uname -a)"
        echo "User: $(whoami)"
        echo ""
        
        echo "Test Summary:"
        echo "-------------"
        
        # Contar resultados
        local total_tests=$(grep -c ":" "$TEST_RESULTS" 2>/dev/null || echo "0")
        local passed_tests=$(grep -c ":PASS:" "$TEST_RESULTS" 2>/dev/null || echo "0")
        local failed_tests=$(grep -c ":FAIL:" "$TEST_RESULTS" 2>/dev/null || echo "0")
        
        echo "Total Tests: $total_tests"
        echo "Passed: $passed_tests"
        echo "Failed: $failed_tests"
        
        if [ $total_tests -gt 0 ]; then
            local success_rate=$((passed_tests * 100 / total_tests))
            echo "Success Rate: $success_rate%"
        fi
        
        echo ""
        echo "Recent Test Results:"
        echo "-------------------"
        tail -n 20 "$TEST_RESULTS" 2>/dev/null || echo "No test results available"
        
        echo ""
        echo "Failed Tests:"
        echo "-------------"
        grep ":FAIL:" "$TEST_RESULTS" 2>/dev/null || echo "No failed tests"
        
    } > "$output_file"
    
    print_status "$GREEN" "‚úÖ Reporte generado: $output_file"
}

# Funci√≥n para limpiar tests
clean_tests() {
    local confirm="${1:-false}"
    
    if [ "$confirm" != "true" ]; then
        echo "‚ö†Ô∏è  ¬øEst√°s seguro de que quieres limpiar todos los tests?"
        echo "Esta acci√≥n no se puede deshacer."
        read -p "Escribe 'yes' para confirmar: " confirm_input
        
        if [ "$confirm_input" != "yes" ]; then
            echo "‚ùå Operaci√≥n cancelada"
            return 1
        fi
    fi
    
    # Limpiar archivos de test
    rm -f "$TEST_DIR"/*.test
    
    # Limpiar resultados
    > "$TEST_RESULTS"
    
    print_status "$GREEN" "‚úÖ Tests limpiados"
}

# Funci√≥n para configurar testing
configure_testing() {
    local test_level="$1"
    local auto_run="$2"
    local coverage="$3"
    
    if [ -z "$test_level" ]; then
        echo "üìã Configuraci√≥n actual de testing:"
        echo "‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"
        
        if [ -f "$TEST_CONFIG" ]; then
            cat "$TEST_CONFIG"
        else
            echo "No hay configuraci√≥n de testing"
        fi
        return
    fi
    
    # Crear archivo de configuraci√≥n
    cat > "$TEST_CONFIG" << EOF
# MateOS Testing Configuration
# Configuraci√≥n de testing de MateOS

[general]
test_level = $test_level
auto_run = ${auto_run:-false}
coverage = ${coverage:-false}

[suites]
unit_tests = true
integration_tests = true
config_tests = true
performance_tests = false

[output]
verbose = false
log_results = true
generate_reports = true
export_format = txt

[coverage]
include_scripts = true
include_configs = true
include_themes = false
EOF
    
    print_status "$GREEN" "‚úÖ Configuraci√≥n de testing actualizada"
}

# Funci√≥n principal
case "$1" in
    "run")
        run_test "$2" "$3"
        ;;
    "suite")
        run_all_tests "$2" "$3"
        ;;
    "create")
        create_test_template "$2" "$3"
        ;;
    "results")
        show_results "$2" "$3"
        ;;
    "report")
        generate_report "$2"
        ;;
    "clean")
        clean_tests "$2"
        ;;
    "configure")
        configure_testing "$2" "$3" "$4"
        ;;
    *)
        echo "üß™ MateOS Testing System"
        echo ""
        echo "Uso: mateos-test <comando> [argumentos]"
        echo ""
        echo "Comandos:"
        echo "  run <archivo_test> [verbose]     - Ejecutar test individual"
        echo "  suite <tipo> [verbose]           - Ejecutar suite de tests"
        echo "  create <nombre> [tipo]           - Crear template de test"
        echo "  results [l√≠neas] [test_name]     - Mostrar resultados"
        echo "  report [archivo]                 - Generar reporte"
        echo "  clean [confirm]                  - Limpiar tests"
        echo "  configure <nivel> [auto_run] [coverage] - Configurar testing"
        echo ""
        echo "Tipos de test: unit, integration, config"
        echo "Suites disponibles: all, unit, integration, config"
        echo ""
        echo "Ejemplos:"
        echo "  mateos-test create my-test unit"
        echo "  mateos-test suite all verbose"
        echo "  mateos-test run my-test.test true"
        echo "  mateos-test results 100"
        echo "  mateos-test configure basic true false"
        ;;
esac
